{
  "name": "comments",
  "private": true,
  "version": "0.0.0",
  "main": "server/index.js",
  "proxy": "http://localhost:3001",
  "scripts": {
    "dev": "concurrently --kill-others-on-fail \"pnpm run server\" \"pnpm run start\" \"pnpm run starttwcss\"",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "server": "nodemon server",
    "start": "vite",
    "starttwcss": "npx tailwindcss -i ./src/index.css -o ./src/output.css --watch",
    "test": "vitest"
  },
  "dependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.23.3",
    "@mui/base": "5.0.0-beta.40",
    "@reduxjs/toolkit": "^2.2.1",
    "@types/react-redux": "^7.1.33",
    "TextareaAutosize": "link:@mui/base/TextareaAutosize",
    "autoprefixer": "^10.4.18",
    "date-fns": "^3.6.0",
    "postcss": "^8.4.35",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.1.0",
    "react-scripts": "^5.0.1",
    "sass": "^1.72.0",
    "sqlite3": "^5.1.6",
    "tailwindcss": "^3.4.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.2",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "body-parser": "^1.20.2",
    "concurrently": "^4.1.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "express": "^4.18.2",
    "jest": "^29.7.0",
    "jsdom": "^24.0.0",
    "nodemon": "^3.1.0",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vitest": "^1.4.0"
  }
}
